<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.messages.any? %>
      <h3>投稿されたメッセージ (<%= @user.messages.count %>)</h3>
      <ol class="messgaes">
        <%= render partial: 'messages/message', collection: @messages  %>
      </ol>
    <% end %>
  </div>
</div>